<h2 style="color:aliceblue; font-style:italic; font-weight:bold">ADMIN PAGE</h2>
<br />

<h3 style="color:aliceblue; font-style:italic;" >Products which need permission</h3>
<br />
<div class="row">
    @foreach (var item in ViewBag.Classes)
    {

        @if (!item.Valid)
        {
            <div class="col-md-4 col-xs-6 border-primary mb-3" style="">



                <div class="card mb-3" style="">
                    <div class="row g-0">

                        <div class="col-md-6">
                            <img src=@item.Picture class="img-fluid rounded-start" nalt="...">
                        </div>

                        <div class="col-md-6">


                            <div class="card-body">
                                <h5 class="card-title">@item.Name</h5>
                                <p class="card-text">@item.Description</p>
                                <div>Style: @item.Style.Name</div>

                                <div>Studio: @item.Studio.Name</div>

                                <div>Price: @item.Price $</div>

                                <div>Instructor: @item.Instructor.Name</div>

                                <div>@item.Rating</div>

                                <div><i class="bi bi-person">@item.User.UserName</i> </div>
                            </div>
                            <a href="/Classes/Accept/@item.Id" class="btn btn-outline-dark" style="margin-left:50px; margin-top:10px">Accept Class in Shop</a>


                        </div>

                    </div>
                </div>
            </div>
        }






    }
</div>